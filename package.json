{
  "private": true,
  "name": "pbt",
  "description": "An unnamed property-based testing framework for TypeScript",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "lerna": "^3.20.2",
    "prettier": "^2.1.1"
  },
  "scripts": {
    "build": "lerna run build --stream",
    "build:watch": "lerna run build:watch --parallel --stream",
    "build:clean": "lerna run build:clean --stream",
    "test": "lerna run test --stream",
    "prettier:write": "prettier --write **/*.{ts,tsx}",
    "prettier:check": "prettier --check **/*.{ts,tsx}",
    "pack": "lerna run pack --parallel --stream",
    "publish": "lerna publish --yes --registry 'https://npm.pkg.github.com/@nth-commit' --canary"
  },
  "licence": "See licence in \"LICENCE\""
}
