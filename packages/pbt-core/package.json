{
  "name": "pbt-core",
  "version": "0.0.1-alpha.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/nth-commit/pbt.git",
    "directory": "packages/pbt-core"
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "files": [
    "lib/"
  ],
  "dependencies": {
    "ix": "^4.0.0",
    "pure-rand": "^3.1.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "cross-env": "^7.0.2",
    "fast-check": "^2.2.0",
    "jest": "^26.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "build": "tsc --project tsconfig.esm.json && tsc --project tsconfig.cjs.json",
    "build:watch": "tsc --project tsconfig.json --watch --preserveWatchOutput",
    "build:clean": "rimraf lib",
    "test": "jest --coverage --no-cache",
    "test:watch": "cross-env fastCheckRuns=10 jest --watchAll --no-cache",
    "sandbox": "ts-node --project scripts/tsconfig.json scripts/sandbox"
